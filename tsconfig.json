{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "preserveConstEnums": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false
    },
    "include": [
        "./src/**/*"
    ]
}